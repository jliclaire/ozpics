<!-- edit buyer page -->

<div class="main">

<div class="form-container">

<h2>Edit Account: <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-section">
    <div class="form-left"> 
      <%= f.label :email %>
    </div>
    <div class"form-right">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-section">
    <div class="form-left">
      <%= f.label :password %>
    </div>
    <div class="form-right">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <em>Leave blank if you dont want to change it</em>

  <div class="field form-section">
    <div class="form-left"> 
      <%= f.label :password_confirmation %>
    </div>
    <div class="form-right">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <% if @minimum_password_length %>
  <em><%= @minimum_password_length %> characters minimum</em>
  <% end %>

  <div class="field form-section">
    <div class="form-left">
      <%= f.label :current_password %>
    </div>
    <div class="form-right">
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  </div>

  <em>We need your current password to confirm your changes</em>

  <div class="spacer"></div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

</div>

<div class="form-container">

<h4>Cancel my account</h4>
<p>Unhappy with our app? Sorry to see you leave. <%= button_to "Cancel", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>

<div class="button-secondary">
  <%= link_to "Back", root_path %>
</div>

</div>