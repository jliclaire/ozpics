<!-- cart -->

<div class="main">

<div class="main-secondary">

<h1>Shopping Cart</h1>

<% @line_items.each do |line_item|%>

  <div class="c-line-items">

    <div class="c-line-item-left">
      <div class="c-line-item-image">
        <a href="/photos/<%= line_item.photo.id %>">
        <%= image_tag(line_item.photo.uploaded_image, style: "width: 300px;") if line_item.photo.uploaded_image.attached? %></a>    
      </div>
      <div class="button">
        <%= link_to "Remove", line_item_path(line_item),
            method: :delete,
            data: {confirm: 'Are you sure?'} %>
      </div>
    </div>

    <div class="c-line-item-middle">
      <div>Title: <%= line_item.photo.title %></div>
      <div>Photographer: <%= line_item.photo.seller.firstname.capitalize %> <%= line_item.photo.seller.lastname.capitalize %></div>
      <div>Description: <%= line_item.photo.description %></div>
    </div>

    <div class="c-line-item-right">
      <div><%= number_to_currency(line_item.photo.price) %></div>
    </div>

    </div>

<% end %>

<%= link_to "Empty Cart", delete_all_path(@line_items),
    method: :delete,
    data: {confirm: 'Are you sure?'} %>
<%= link_to 'Continue Shopping', root_path %>   

<div class="c-line-items-total">
  <div class="c-line-items-count"><%= @line_items.count %> items</div>
  <div>TOTAL: <%= number_to_currency(@total_amount) %></div>
</div>

<%= render "layouts/shared/stripe_form", total_amount: @total_amount %>

</div>

</div>