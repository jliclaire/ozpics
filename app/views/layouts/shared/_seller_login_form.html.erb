<!-- Seller login modal -->

<!-- Button trigger modal -->
<button type="button" class="button" data-toggle="modal" data-target="#exampleModalCenter">
  Log in
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalCenterTitle">Seller Log in</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
        <%= form_for(seller_resource, as: seller_resource_name, url: session_path(seller_resource_name)) do |f| %>
          <div class="field form-section">
            <div class="form-left">
              <%= f.label :email %>
            </div>
            <div class="form-right">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="field form-section">
            <div class="form-left">
            <%= f.label :password %>
            </div>
            <div class="form-right">
            <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>

          <% if seller_devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          <% end %>

          <div class="spacer"></div>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>

          <div class="spacer"></div>

          <div class="button">
            <%- if seller_devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(seller_resource_name) %><br />
            <% end %>
          </div>

          <div class="spacer"></div>

          <p>Forgot your password?</p>

          <div class="button">
            <%- if seller_devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Reset", new_password_path(seller_resource_name) %><br />
            <% end %>
          </div>

        <% end %>

      </div>
      
    </div>
  </div>
</div>