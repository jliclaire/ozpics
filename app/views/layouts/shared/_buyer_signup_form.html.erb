<!-- Buyer sign up modal -->

<!-- Button trigger modal -->
<button type="button" class="button" data-toggle="modal" data-target="#exampleModalCenter3">
  Sign up
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter3Title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalCenter3Title">Buyer sign up</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">    
        <%= form_for(buyer_resource, as: buyer_resource_name, url: registration_path(buyer_resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: buyer_resource %>

          <div class="field form-section">
            <div class="form-left">
              <%= f.label :email %>
            </div>
            <div class="form-right"
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="field form-section">
            <div class="form-left">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
              <div class="form-right">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="field form-section">
            <div class="form-left">
              <%= f.label :password_confirmation %>
            </div>
            <div class="form-right">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>