<!DOCTYPE html>
<html>
  <head>
    <title>Ozpics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-light bg-light">
      <div class="container">
          
        <div class="navbar-header">
          <%= link_to 'Ozpics', root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% unless buyer_signed_in? %>
            <% if seller_signed_in? %>
              <li><%= link_to 'Dashboard', seller_page_path(current_seller) %></li>
              <li><%= link_to 'Log out', destroy_seller_session_path, method: :delete %></li>
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" 
                aria-expanded="false">Sell <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Seller Log In', new_seller_session_path, class:"dropdown-item" %></li>
                  <li><%= link_to 'Seller Sign Up', new_seller_registration_path, class:"dropdown-item" %></li>
                </ul>
              </li>
            <% end %>
          <% end %>

          <% unless seller_signed_in? %>
            <% if buyer_signed_in? %>
              <li><%= link_to 'Shopping Cart', edit_buyer_registration_path %></li>
              <li><%= link_to 'Log out', destroy_buyer_session_path, method: :delete %></li>
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" 
                aria-expanded="false">Buy <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Buyer Log In', new_buyer_session_path, class:"dropdown-item" %></li>
                  <li><%= link_to 'Buyer Sign Up', new_buyer_registration_path, class:"dropdown-item" %></li>
                </ul>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
      
    <%= yield %>

  </body>
</html>
