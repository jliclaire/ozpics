<!DOCTYPE html>
<html>
  <head>
    <title>Ozpics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
-->
    <div class="container">
      <div class="navbar navbar-light bg-light">
        <%= link_to 'Home', root_path, class:"navbar-brand" %>

        <ul class="nav navbar-nav pull-right">
          <% if seller_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_seller_registration_path %></li>
                <li><%= link_to 'Log out', destroy_seller_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
          <li class="dropdown">Sell
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span>
              </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Seller Log In', new_seller_session_path, class:"dropdown-item" %></li>
              <li><%= link_to 'Seller Sign Up', new_seller_registration_path, class:"dropdown-item" %></li>
            </ul>
          <% end %>
        </ul>

        <ul class="nav navbar-nav pull-right">
          <% if buyer_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_buyer_registration_path %></li>
                <li><%= link_to 'Log out', destroy_buyer_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">Buy
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span>
              </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Buyer Log In', new_buyer_session_path, class:"dropdown-item" %></li>
              <li><%= link_to 'Buyer Sign Up', new_buyer_registration_path, class:"dropdown-item" %></li>
            </ul>
          <% end %>
        </ul>
      </div>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>
    
    <%= yield %>
  </div>
  </body>
</html>
