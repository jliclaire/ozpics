<h1>photos</h1>

<%= image_tag @photo.uploaded_image, style:'width: 300px' if @photo.uploaded_image.attached? %>

<h2><%= @photo.title %></h2>

<h4>Price</h4>
<p><%= @photo.price %></p>

<h4>Photographer</h4>
<p><%= @photo.seller.firstname %> <%= @photo.seller.lastname %></p>

<h5>Description</h5>
<p><%= @photo.description %></p>

<% unless seller_signed_in? %>
  <button type="button" class="btn btn-primary">Buy</button>
<% end %>

<% if seller_signed_in? %>
  <% if @photo.seller_id == current_seller.id %>
    <%= link_to 'Edit', edit_photo_path(@photo) %>
    <%= link_to "delete", delete_photo_path(@photo),
        method: :delete,
        data: {confirm: 'Are you sure?'} %>
  <% end %>
<% end %>

<div>
  <% if seller_signed_in? %>
    <% if @photo.seller_id == current_seller.id %>
      <%= link_to "Go to Dashboard", seller_page_path(@photo.seller_id) %>
    <% end %>
  <% end %> 
</div>

<div>
  <%= link_to "Back to Home", root_path %>
</div>
        
      