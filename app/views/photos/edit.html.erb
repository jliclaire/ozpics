<!-- edit photo page -->

<div class="main-dark">

<div class="form-container">

<h2 class="white">Edit photo</h2>

<form action="<%= photo_path(params[:id]) %>" method="POST" enctype="multipart/form-data" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <input type="hidden" name="_method" value="patch" />

    <div class="form-section">
        <div class="form-left">
            <label for="title">Title</label>
        </div>
        <div class="form-right">
            <input type="textarea" name="title" id="title" value="<%= @photo.title %>"/>
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label for="book_category_id">Category</label>
        </div>
        <div class="form-right">
        <select class="form-control" id="book_category_id" name="category_id">  
            <% @categories.each do |category| %>
                <option value="<%= category.id %>" <%= "selected" if @photo.category_id == category.id %>><%= category.name %></option>
            <% end %>      
        </select>
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
           <label>Description</label>
        </div>
        <div class="form-right">
            <input type="textarea" name="description" id="description" value="<%= @photo.description %>" />
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label for="price">Price</label>
        </div>
        <div class="form-right">
            <input type="text" name="price" id="price" value="<%= @photo.price %>"/>
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label>Image</label>
        </div>
        <div class="form-right">
            <input type="file" name="uploaded_image" accept="image/png, image/jpeg">
        </div>
    </div>

    <div class="spacer"></div>
    
    <input type="submit" value="Update" />
</form>

</div>

<div class="button-secondary">
    <%= link_to 'Cancel', photo_path(@photo), style: "color: white" %>
</div>

</div>