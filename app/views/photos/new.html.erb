<!-- new photo page -->

<div class="main-dark">

<div class="form-container">

<h1 class="white">Add photo</h1>

<form action="<%= photos_path %>" method="POST" enctype="multipart/form-data" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <% if @photo.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@photo.errors.count, "error") %> prohibited
        this photo from being saved:
        </h2>
        <ul>
        <% @photo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <div class="form-section">
        <div class="form-left">
            <label for="title">Title</label>
        </div>
        <div class="form-right">
            <input type="textarea" name="title" id="title"/>
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label for="category_id">Category</label>
        </div>
        <div class="form-right">
            <select class="form-control" id="category_id" name="category_id">
                <option value="">Select a category</option>     
                <% @categories.each do |category| %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% end %>      
            </select>
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label>Description</label>
        </div>
        <div class="form-right">
            <input type="textarea" name="description" id="description" />
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label for="price">Price</label>
        </div>
        <div class="form-right">
            <input type="text" name="price" id="price" />
        </div>
    </div>

    <div class="form-section">
        <div class="form-left">
            <label>Image</label>
        </div>
        <div class="form-right">
            <input type="file" name="uploaded_image" accept="image/png, image/jpeg">
        </div>
    </div>

    <input type="submit" value="Upload" />
</form>

</div>

<div class="button-secondary">
  <%= link_to "Cancel", seller_page_path, style: "color: white" %>
</div>

</div>