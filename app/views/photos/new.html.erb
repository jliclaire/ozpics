<h1>Create A New photo</h1>

<form action="<%= photos_path %>" method="POST" enctype="multipart/form-data" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <% if @photo.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@photo.errors.count, "error") %> prohibited
        this photo from being saved:
        </h2>
        <ul>
        <% @photo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <label for="title">Title</label>
    <input type="text" name="title" id="title"/>

    <label>Description</label>
    <input type="textarea" name="description" id="description" />

    <label for="price">Price</label>
    <input type="text" name="price" id="price" />

    <label>Image</label>
    <input type="file" name="uploaded_image" accept="image/png, image/jpeg">

    <input type="submit" value="Create" />
</form>